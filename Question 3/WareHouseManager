using System;
using System.Collections.Generic;

public void PrintAllItems<T>(InventoryRepository<T> repo) where T : IInventoryItem
{
    var items = repo.GetAllItems();

    Console.WriteLine($"\nItems in {typeof(T).Name} repository:");

    if (items.Count == 0)
    {
        Console.WriteLine("No items found.");
        return;
    }

    foreach (var item in items)
    {
        // Print common properties
        Console.WriteLine($"ID: {item.Id}, Name: {item.Name}, Quantity: {item.Quantity}");

        // Additional info for specific types
        if (item is ElectronicItem e)
            Console.WriteLine($"   Brand: {e.Brand}, Warranty: {e.WarrantyMonths} months");
        else if (item is GroceryItem g)
            Console.WriteLine($"   Expiry Date: {g.ExpiryDate.ToShortDateString()}");
    }
}
